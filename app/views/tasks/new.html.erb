<div class='section'>
    <%= simple_form_for @task do |f|%>
        <div class='field form-group'>
            <div class='control' >
                  <%=f.input :title, placeholder: "Task Name", label: false, input_html: { class: 'form-style' }%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :date, placeholder: "Date",label: false, input_html: { class: 'form-style' }%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :time, placeholder: "Time",label: false, input_html: { class: 'form-style' }%>
            </div>
        </div>
        <div class='field'>
            <div class='control'>
                <%=f.input :description, placeholder: "Description", label: false, input_html: { class: 'form-style' } %>
            </div>
        </div>
        <%= f.button :submit, 'Create Task', class: 'btn btn-outline-dark' %>
  <%end%>
</div>
